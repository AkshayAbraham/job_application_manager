{
  "manifest_version": 3,
  "name": "Job Application Saver",
  "version": "1.0",
  "description": "Save selected job details to Google Sheets with a hotkey.",
  "permissions": ["scripting", "storage", "contextMenus", "activeTab"],
  "host_permissions": ["https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Save selected text"
    },
    "show_social_media_page": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "Show Social Media Page"
    },
    "save_job_data": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z"
      },
      "description": "Save job title and company name"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}